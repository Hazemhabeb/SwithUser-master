<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3"
    android:fillViewport="true"
    android:layoutDirection="rtl"
    android:paddingTop="60dp"
    android:paddingBottom="60dp"
    tools:context=".activities.ReportActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/back_corner1">

            <TextView
                android:id="@+id/loginTextTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="الإبلاغ عن مشكلة"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="15sp"
            android:layout_marginBottom="20dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_corner2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الاسم"
                android:textColor="@color/gray7"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/nameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_back1"
                android:hint="اكتب اسمك هنا"
                android:padding="8dp"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/passwordTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="كود الطلب"
                android:textColor="@color/gray7"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_back1"
                android:layout_marginBottom="16dp"
                android:hint="2368551"
                android:padding="8dp"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/detailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المشكلة"
                android:textColor="@color/gray7"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/detailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_back1"
                android:layout_marginBottom="16dp"
                android:hint="اكتب نوع المشكلة"
                android:padding="8dp"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/phoneTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رقم الهاتف"
                android:textColor="@color/gray7"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/phoneET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_back1"
                android:layout_marginBottom="16dp"
                android:hint="كتب رقم الهاتف الخاص بك"
                android:padding="8dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_back1"
                android:text="ارسال"
                android:textColor="@color/white" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>