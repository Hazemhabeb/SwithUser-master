<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <!--<view-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="#40000000"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_blue" />
        </FrameLayout>


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray3"
            android:fillViewport="true"
            android:layoutDirection="rtl"
            android:paddingTop="60dp"
            android:paddingBottom="60dp"
            tools:context=".activities.ContactUsActivity">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/back_corner1">

                    <TextView
                        android:id="@+id/loginTextTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="راسلنا"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="15sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/back_corner2"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView
                            android:id="@+id/nameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الاسم"
                            android:textColor="@color/gray7"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/nameET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/edit_text_back1"
                            android:hint="اكتب اسمك هنا"
                            android:padding="8dp"
                            android:textSize="11sp" />


                        <TextView
                            android:id="@+id/phoneTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="رقم الهاتف"
                            android:textColor="@color/gray7"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/phoneET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/edit_text_back1"
                            android:hint="كتب رقم الهاتف الخاص بك"
                            android:padding="8dp"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/goverTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="المحاغظة"
                            android:textColor="@color/gray7"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/goverET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/edit_text_back1"
                            android:hint="اكتب المحافظة التي تعيش بها هنا"
                            android:padding="8dp"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/detailTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="رسالتك"
                            android:textColor="@color/gray7"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/detailET"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/edit_text_back1"
                            android:gravity="top"
                            android:hint="كتب رسالتك هنا"
                            android:padding="8dp"
                            android:textSize="11sp" />


                        <Button
                            android:id="@+id/sendBtn"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/button_back1"
                            android:text="ارسال"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="أرقام التواصل" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="010123456789" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="010123456789" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="32dp"
                            android:text="يمكنكم التواصل مع خدمة العملاء 24 ساعة"
                            android:textColor="@color/text_blue2" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>


    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="?android:colorAccent"
        android:indeterminateTintMode="src_in"
        android:visibility="gone" />


</FrameLayout>
